<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.manoj.popo1.ProductDetails">

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:text="Product Details"
        android:textColor="#262525"
        android:textSize="25dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="36dp"
        android:layout_marginTop="29dp"
        android:text="Product ID:"
        android:textColor="#262525"
        android:textSize="18dp"
        android:layout_below="@+id/textView17"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView19"
        android:layout_marginTop="16dp"
        android:layout_toStartOf="@+id/textViewPID"
        android:text="Rec. Name:"
        android:textColor="#262525"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="E-Mail:"
        android:textColor="#262525"
        android:textSize="18dp"
        android:layout_below="@+id/textView22"
        android:layout_alignEnd="@+id/textView22" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView23"
        android:layout_below="@+id/textView23"
        android:layout_marginTop="15dp"
        android:text="Phone:"
        android:textColor="#262525"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/textView24"
        android:layout_below="@+id/textView24"
        android:layout_marginTop="20dp"
        android:text="Address:"
        android:textColor="#262525"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewPID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView22"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/textView19"
        android:text="TextView"

        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewRNaame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView23"
        android:layout_alignStart="@+id/textViewPID"
        android:text="TextView"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView24"
        android:layout_alignStart="@+id/textViewRNaame"
        android:text="TextView"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/textViewPhn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView25"
        android:layout_alignStart="@+id/textViewEmail"
        android:text="TextView"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textViewAddr"
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:layout_alignStart="@+id/textViewPhn"
        android:layout_alignTop="@+id/textView25"
        android:text="TextView"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Expected Date:"
        android:textSize="18dp"
        android:textColor="#262525"
        android:layout_below="@+id/textViewAddr"
        android:layout_alignEnd="@+id/textView25"
        android:layout_marginTop="14dp" />

    <TextView
        android:id="@+id/textViewDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:textSize="18dp"
        android:layout_alignBaseline="@+id/textView31"
        android:layout_alignBottom="@+id/textView31"
        android:layout_alignStart="@+id/textViewAddr" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:background="@drawable/buttonstyle"
        android:onClick="map"
        android:text="Map"
        android:textColor="#ffffff"
        android:layout_below="@+id/textView31"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:onClick="call"
        android:text="CALL"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/button5"
        android:layout_alignBottom="@+id/button5"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonstyle"
        android:onClick="updateStatus"
        android:text="Status"
        android:textColor="#ffffff"
        android:layout_alignBaseline="@+id/button6"
        android:layout_alignBottom="@+id/button6"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
